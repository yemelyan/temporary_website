								<polyline points="7 10 12 15 17 10" stroke="#008080" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<line x1="12" y1="15" x2="12" y2="3" stroke="#008080" stroke-width="2" stroke-linecap="round"/>
							</svg>
						</div>
					</a>

					<a href="/documents/20jun_Riga Pilot Action proposal.docx" class="document-card" download>
						<div class="document-icon">
							<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="#008080" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<polyline points="14 2 14 8 20 8" stroke="#008080" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<line x1="16" y1="13" x2="8" y2="13" stroke="#008080" stroke-width="2" stroke-linecap="round"/>
								<line x1="16" y1="17" x2="8" y2="17" stroke="#008080" stroke-width="2" stroke-linecap="round"/>
							</svg>
						</div>
						<div class="document-content">
							<h3 class="document-name">Pilot Action Proposal</h3>
							<p class="document-description">Budget and Operational Plan (June 20th)</p>
							<div class="document-meta">
								<span class="document-type">DOCX</span>
							</div>
						</div>
						<div class="document-action">
							<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" stroke="#008080" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<polyline points="7 10 12 15 17 10" stroke="#008080" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<line x1="12" y1="15" x2="12" y2="3" stroke="#008080" stroke-width="2" stroke-linecap="round"/>
							</svg>
						</div>
					</a>

					<a href="/documents/Kopsavilkums-RVCZA-1.pdf" class="document-card" download>
						<div class="document-icon">
							<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="#008080" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<polyline points="14 2 14 8 20 8" stroke="#008080" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<line x1="16" y1="13" x2="8" y2="13" stroke="#008080" stroke-width="2" stroke-linecap="round"/>
								<line x1="16" y1="17" x2="8" y2="17" stroke="#008080" stroke-width="2" stroke-linecap="round"/>
								<polyline points="10 9 9 9 8 9" stroke="#008080" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							</svg>
						</div>
						<div class="document-content">
							<h3 class="document-name">Vacancy Audit 2025</h3>
							<p class="document-description">Economic activity summary (Kopsavilkums)</p>
							<div class="document-meta">
								<span class="document-type">PDF</span>
							</div>
						</div>
						<div class="document-action">
							<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
								<path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" stroke="#008080" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<polyline points="7 10 12 15 17 10" stroke="#008080" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
								<line x1="12" y1="15" x2="12" y2="3" stroke="#008080" stroke-width="2" stroke-linecap="round"/>
							</svg>
						</div>
					</a>
				</div>
			</div>
		</section>

		<!-- Part 2: Operational Templates (Coming Soon) -->
		<section class="coming-soon-section">
			<h2 class="coming-soon-title">Standardized Agreements (In Development)</h2>
			<div class="templates-list">
				<div class="template-item">
					<div class="template-icon">
						<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="#999" stroke-width="2"/>
							<path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
					<div class="template-content">
						<h3 class="template-name">Memorandum of Understanding</h3>
						<p class="template-description">Owner & User cooperation protocol</p>
					</div>
					<div class="template-badge">Coming Soon</div>
				</div>

				<div class="template-item">
					<div class="template-icon">
						<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="#999" stroke-width="2"/>
							<path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
					<div class="template-content">
						<h3 class="template-name">Letter of Intent</h3>
						<p class="template-description">Owner declaration to Competence Center</p>
					</div>
					<div class="template-badge">Coming Soon</div>
				</div>

				<div class="template-item">
					<div class="template-icon">
						<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="#999" stroke-width="2"/>
							<path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
					<div class="template-content">
						<h3 class="template-name">Space Agreement: Outdoors</h3>
						<p class="template-description">Garden/Sports use template</p>
					</div>
					<div class="template-badge">Coming Soon</div>
				</div>

				<div class="template-item">
					<div class="template-icon">
						<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="#999" stroke-width="2"/>
							<path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
					<div class="template-content">
						<h3 class="template-name">Space Agreement: Indoors</h3>
						<p class="template-description">Project space template</p>
					</div>
					<div class="template-badge">Coming Soon</div>
				</div>

				<div class="template-item">
					<div class="template-icon">
						<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<rect x="3" y="11" width="18" height="11" rx="2" ry="2" stroke="#999" stroke-width="2"/>
							<path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="#999" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</div>
					<div class="template-content">
						<h3 class="template-name">Event Use Agreement</h3>
						<p class="template-description">Short-term activation template</p>
					</div>
					<div class="template-badge">Coming Soon</div>
