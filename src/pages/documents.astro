---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Document Library - Riga Temporary Use Competence Center">
	<main class="documents-page">
		<!-- Header -->
		<header class="documents-header">
			<h1 class="documents-title">Document Library</h1>
			<p class="documents-subtitle">
				Strategic frameworks, research data, and operational templates.
			</p>
		</header>

		<!-- Part 1: Available Resources -->
		<section class="available-section">
			<!-- Strategic Handbooks -->
			<div class="section-group">
				<h2 class="section-title">Strategic Handbooks</h2>
