---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us - Riga Temporary Use Competence Center">
	<main class="page-content">
		<h1>Contact Us</h1>
		<p>Get in touch with the Riga Temporary Use Competence Center team for questions, support, or collaboration opportunities.</p>
	</main>
</Layout>

<style>
	.page-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 8rem 2rem 4rem;
	}

	h1 {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 1.5rem;
		color: #333;
	}

	p {
		font-size: 1.1rem;
		color: #666;
		line-height: 1.7;
	}
</style>
